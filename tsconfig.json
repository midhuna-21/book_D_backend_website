{
  "compilerOptions": {
    "outDir": "./dist", 
    "module": "commonjs",
    "target": "ES2020", 
    "lib": ["ES2020"],
    "rootDir": "./src", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
